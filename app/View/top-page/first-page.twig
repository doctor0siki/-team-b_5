   .top-body{
     margin-top:-50px;
   }
   .top-wrapper{
      height: 500px;
      background-image: url('/assets/img/2bf72e45310b09c0ad25bd30221e2e5f_s.jpg');
      background-size: cover;
      color: black;
      text-align: center;
    }
  .parenthesis {
    position: relative;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
  }
  .parenthesis::before,
  .parenthesis::after {
    position: absolute;
    content: '';
    width: 180px;
    height: 50px;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
  }
  .parenthesis::before {
    top: 0;
    left: 0;
    border-top: 5px solid #333;
    border-left: 5px solid #333;
  }
  .parenthesis::after {
    bottom: 0;
    right: 0;
    border-bottom: 5px solid #333;
    border-right: 5px solid #333;
  }
