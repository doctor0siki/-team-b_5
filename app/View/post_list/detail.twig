{#レイアウトを継承します#}
{% extends "layout/layout.twig" %}

{#HTMLのタイトルを定義します。#}
{% block title %}投稿{% endblock %}

{# 適用させたいスタイルシートのパスを指定します #}
{% block header_scripts_add %}
    <style>
        .post-detail {
            padding: 70px 50px;
            background-color: white;
            border-radius: 20px;
            box-shadow: 5px 5px;
            border: 1px solid #000;
        }

        .name {
            display: flex;
            padding-top: 20px;
        }

        .picture0 img {
            width: 50px;
            height: 50px;
        }

        .picture1 img {
            width: 200px;
            height: 200px;
        }

        .picture2 img {
            width: 30px;
            height: 30px;
        }

        .post-for-comment {
            margin-left: 100px;
        }

        .border-bottom {
            border-bottom: solid 1px #000;
        }


    </style>

{% endblock %}

{#ここから表示したい情報を記載します。#}
{% block page_content %}
    <div class="post-detail">
        <div class="page-header">
            <h1>{{ result.title }}</h1>
        </div>
        <br>
        <div class="row">
            <div class="col-sm-5">
                <div class="name">
                    <div class="picture0">　
                        <img src="{{ result.icon_img }}">
                    </div>
                    　
                    <p>{{ result.nickname }} さん</p>
                </div>
                <br>
                <div class="picture1">
                    <img src="{{ result.img_url }}">
                </div>
            </div>
            <div class="col-sm-7">
                <br> <br>
                <h3>
                    <small>{{ result.sub_title }}</small>
                </h3>
                <br>
                {% if result.cat_code == 1 %}
                    <div class="btn btn-sm btn-outline-primary ">郷土料理</div>
                {% endif %}
                {% if result.cat_code == 2 %}
                <div class="btn btn-sm btn-outline-primary ">地酒屋</div>
                {% endif %}
                {% if result.cat_code == 3 %}
                    <div class="btn btn-sm btn-outline-primary ">ワークスペース</div>
                {% endif %}
                <br><br/>
                {{ result.detail | nl2br }}
            </div>
        </div>
        <br><br>
        <a href="/comment/{{ result.plan_id }}" class="btn btn-success form-control">コメントを書く</a>
        <br><br>
        <h5>コメント</h5>
        {% for col in comment %}
            <div class="border-bottom">
                <div class="post-for-comment">
                    <div class="name">
                        <div class="picture2">
                            <img src="{{ col.icon_img }}"/>
                        </div>
                        <span>　{{ col.nickname }}さん</span>
                    </div>
                    <br>

                    <p>{{ col.text|nl2br }}</p>
                    <br>
                    </p>
                    <br>
                </div>
            </div>
        {% endfor %}
    </div>
    </div>
{% endblock %}

{#共通フッタとして追記したい情報を記載します。#}
{% block footer_scripts_add %}{% endblock %}
